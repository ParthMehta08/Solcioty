            //        isMapped = true;
            //    }

            //});
            //if (isMapped == true) {
            //    toastr.error("Template already selected!");
            //    return;
            //}
            $.ajax({
                url: "@Url.Action("ViewBoxerTemplate", "Workout")",
                type: "get",
                dataType: "html",
                data: { "ID": templateId, "boxerWorkoutId": workoutId,"isRead":false  },
                success: function (data) {
