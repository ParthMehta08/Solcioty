<style>

    .video_name {
        width: 103% !important;
    }

    .m-l_2_5 {
        margin-left: 0% !important;
        padding-left: 2.2%;
    }

    #datatable-buttons_wrapper {
        height: 85vh;
    }

    .Fullscreen h3 {
        text-align: left !important;
        font-size: 1.9vw;
    }

    .extra {
        margin-left: 2.2%;
    }

