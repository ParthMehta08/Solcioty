@using Models;
@model ForgorPasswordRequestModel
@{
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
    ViewBag.Title = "Forgot Password";

}
<div class="userlogin" id="userlogintable" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content m-t-20p">
            <div class="modal-header h4">
                Forgot Password
            </div>
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
            {
                <div class="modal-body p-5p" style="display:inline-table;">
                    <div class="col-sm-12">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        <span style="color:red">@Html.ValidationMessageFor(m => m.Email)</span>
                    </div>

                    <div class="col-sm-12 m-t-10 text-center">

                        <button type="submit" class="btn btn-purple waves-effect waves-light" id="forgotpassword">Submit</button>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section footerscript
{

    @if (ViewBag.OperationType == "fail")
    {
        <script type="text/javascript">
            toastr.error("@ViewBag.OperationMessage.ToString()")
        </script>
    }
    @if (ViewBag.OperationType == "success")
    {
        <script type="text/javascript">
            toastr.success("@ViewBag.OperationMessage.ToString()")
        </script>
    }
}